{
  "$schema": "http://json-schema.org/draft-07/schema
  "title": "RLBot State Schema",
  "type": "object",
  "properties": {
    "player": {
      "type": "object",
      "properties": {
        "location": {
          "type": "object",
          "properties": {
            "x": { "type": "integer" },
            "y": { "type": "integer" },
            "plane": { "type": "integer" }
          },
          "required": ["x", "y", "plane"]
        },
        "health": {
          "type": "object",
          "properties": {
            "current": { "type": "integer" },
            "maximum": { "type": "integer" }
          },
          "required": ["current", "maximum"]
        },
        "inCombat": { "type": "boolean" },
        "isRunning": { "type": "boolean" },
        "runEnergy": { "type": "number" },
        "skills": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "level": { "type": "integer" },
              "realLevel": { "type": "integer" },
              "experience": { "type": "integer" }
            }
          }
        },
        "prayer": { "type": "integer" }
      },
      "required": ["location", "health", "inCombat", "runEnergy", "skills"]
    },
    "npcs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "combatLevel": { "type": "integer" },
          "location": {
            "type": "object",
            "properties": {
              "x": { "type": "integer" },
              "y": { "type": "integer" },
              "plane": { "type": "integer" }
            }
          },
          "health": {
            "type": "object",
            "properties": {
              "current": { "type": "integer" },
              "maximum": { "type": "integer" }
            }
          },
          "interacting": { "type": "boolean" },
          "distance": { "type": "number" }
        }
      }
    },
    "objects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "location": {
            "type": "object",
            "properties": {
              "x": { "type": "integer" },
              "y": { "type": "integer" },
              "plane": { "type": "integer" }
            }
          },
          "actions": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "groundItems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "quantity": { "type": "integer" },
          "location": {
            "type": "object",
            "properties": {
              "x": { "type": "integer" },
              "y": { "type": "integer" },
              "plane": { "type": "integer" }
            }
          }
        }
      }
    },
    "interfaces": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "type": { "type": "string" },
          "text": { "type": "string" },
          "actions": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "exploration": {
      "type": "object",
      "properties": {
        "currentChunk": {
          "type": "object",
          "properties": {
            "x": { "type": "integer" },
            "y": { "type": "integer" }
          }
        },
        "visitedChunks": { "type": "integer" }
      }
    },
    "screenshot": { "type": "string" }
  },
  "required": ["player", "npcs", "objects", "groundItems"]
} 